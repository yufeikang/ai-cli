    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ask",
            "type": "python",
            "request": "launch",
            "module": "ai_cli.cli",
            "args": [
                "-d",
                "ask",
                "hello"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Setting",
            "type": "python",
            "request": "launch",
            "module": "ai_cli.cli",
            "args": [
                "setting",
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Setting Edit",
            "type": "python",
            "request": "launch",
            "module": "ai_cli.cli",
            "args": [
                "setting",
                "-e"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}